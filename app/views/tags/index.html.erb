<% unless notice.nil? %>
  <div class="alert alert-<%=notice["type"]%> alert-dismissable">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <p id="notice"><%= notice["message"] %></p>
  </div>
<% end %>

<div class="page__content subheader">
  <h1 class="pull-left">Tags</h1>
  <%= link_to 'Asset Page', product_path(@product), class: "button button pull-right" %>
</div>
<div class="page__content main-content">
  <table>
    <thead>
      <tr>
        <th>Key:</th>
         <th>&nbsp;&nbsp;</th>
        <th>Value:</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td><%= tag.key %></td>
          <td>&nbsp;&nbsp;</td>
          <td><%= tag.value %></td>
          <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
          <td><%= link_to 'Show', [@product, tag] %></td>
          <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
          <td><%= link_to 'Edit', edit_product_tag_path(@product, tag) %></td>
          <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
          <td><%= link_to 'Destroy', [@product, tag], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Tag', new_product_tag_path(@product), class: "button button--cta" %>
</div>